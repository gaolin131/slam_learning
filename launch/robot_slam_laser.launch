<launch>
  <!-- Arguments -->
  <arg name="slam_methods" default="gmapping"/>
  <arg name="open_rviz" default="false"/>
  <arg name="planner"  default="" doc="opt: dwa, teb"/> 
  <param name="/use_sim_time" value="$(arg simulation)" />  

  <!-- robot with lidar -->
  <include file="$(find slam_learning)/launch/robot_lidar.launch"/>
  </include>


  <!-- SLAM: Gmapping, Cartographer, Hector, Karto -->
  <include file="$(find slam_learning)/launch/gmapping.launch">
  </include>
  <!-- move_base -->
  <group unless="$(eval planner == '')">
    <include file="$(find robot_navigation)/launch/move_base.launch" unless="$(eval planner == '')">
        <arg name="planner"            value="$(arg planner)"/>
    </include>
  </group>
  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find robot_navigation)/rviz/slam.rviz"/>
  </group>
  
</launch>
